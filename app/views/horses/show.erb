<div div class="pull-left">
<%= image_tag @horse.pic.url(:medium) %>
</div>
<div class="tontainer">
<ul>
  <li><%= @horse.name %></li>
  <li><%= @horse.breed %></li>
  <li><%= @horse.height%></li>
  <li><%= @horse.weight %></li>
  <li><%= @horse.DOB %></li>
  <li><%= @horse.RHR %></li>
  <li><%= @horse.gender %></li>
</ul>
</div>
<table class="table">
  <% @horse.tasks.each do|task| %>
  <tr>
  <td><%= task.name%></td>
  <td><%= task.description %></td>
  <td><%= task.duedate %></td>
  </tr>
<% end %>


